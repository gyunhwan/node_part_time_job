<!--검색화면-->
<div style="text-align: center;" >
        <br><br>
        <div id="carouselExampleIndicators" class="text-center mb-4" data-ride="carousel">
        <form action="../search" method="GET">
            <table style="margin-left:10%">
                    <tr>
                        <td><input type="text" name="employment_board_address" placeholder="지역"></td>
                        <td><input type="submit" value="검색"></td>
                    </tr>
                </table>
        </form>
        <table class="table table-bordered">
            <tr>
                <td>모집제목</td>
                <td>기업명</td>
                <td>급여</td>
                <td>근무시간</td>
            </tr>
            <%for(var i=0 ; i<data.length;i++){%>
            <tr>
                <td><%=data[i].employment_board_name%></td>
                <td><a href=<%=`/detail?employment_board_num=${data[i].employment_board_num}`%>><%=data[i].employment_board_companyname%></a></td>
                <td><%=data[i].employment_board_salary%></td>
                <td><%=data[i].employment_board_time%></td>
            </tr>
                <%}%>
            
        </table>
        </div>
        </div>